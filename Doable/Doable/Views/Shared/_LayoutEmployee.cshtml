@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/employee.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Employee" asp-action="EmployeeDashboard">
                        <img src="~/images/mini-logo.png" alt="Doable Logo" style="height: 40px;">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Employee" && ViewContext.RouteData.Values["action"]?.ToString() == "EmployeeDashboard") ? "active" : "")"
                                   asp-area="" asp-controller="Employee" asp-action="EmployeeDashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "ETask" && ViewContext.RouteData.Values["action"]?.ToString() == "Index") ? "active" : "")"
                                   asp-area="" asp-controller="ETask" asp-action="Index">Tasks</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "ECustomer" && ViewContext.RouteData.Values["action"]?.ToString() == "Index") ? "active" : "")"
                                   asp-area="" asp-controller="ECustomer" asp-action="Index">Customers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "EBooking" && ViewContext.RouteData.Values["action"]?.ToString() == "Index") ? "active" : "")"
                                   asp-area="" asp-controller="EBooking" asp-action="Index">Bookings</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Account
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                    <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "EAccount" && ViewContext.RouteData.Values["action"]?.ToString() == "Index") ? "active" : "")"
                                       asp-area="" asp-controller="EAccount" asp-action="Index">Account</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Account")">Logout</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="content">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - Doable - <a asp-area="" asp-controller="Employee" asp-action="EmployeeDashboard">Employee</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
