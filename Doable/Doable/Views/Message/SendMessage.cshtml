@model Doable.Models.Message
@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    ViewData["Title"] = "Send Message";
}

<h2>Send Message</h2>

<form asp-action="SendMessage" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="ReceiverId" class="control-label"></label>
        <select asp-for="ReceiverId" class="form-control" asp-items="@(new SelectList(ViewBag.Users, "ID", "Username"))"></select>
        <span asp-validation-for="ReceiverId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Send</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
