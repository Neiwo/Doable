@model Doable.Models.Message

@{
    ViewData["Title"] = "Send Message";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<h2>Send Message</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ReceiverId" class="control-label"></label>
        <input asp-for="ReceiverId" class="form-control" />
        <span asp-validation-for="ReceiverId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
