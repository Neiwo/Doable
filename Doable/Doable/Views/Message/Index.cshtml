@model IEnumerable<Doable.Models.Message>

@{
    ViewData["Title"] = "Messages";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<h2>Messages</h2>

<div>
    <a class="btn btn-primary" asp-controller="Message" asp-action="SendMessage">Send New Message</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Content</th>
            <th>Timestamp</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>@(message.Sender?.Username ?? "Unknown Sender")</td>
                <td>@(message.Receiver?.Username ?? "Unknown Receiver")</td>
                <td>@message.Content</td>
                <td>@message.Timestamp</td>
                <td>
                    <a class="btn btn-info" asp-controller="Message" asp-action="ViewMessage" asp-route-id="@message.MessageId">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
