@model Doable.Models.RegisterModel

@{
    Layout = "~/Views/Shared/_LayoutNoNav.cshtml";
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" type="text/css" href="~/css/register.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <br />
    <br />
    <div class="container">
        @if (TempData["RegisterSuccess"] != null && TempData["RegisterSuccess"].ToString() == "True")
        {
            <script type="text/javascript">
                alert("Registration successful!");
                window.location.href = '@Url.Action("Login", "Account")';
            </script>
        }
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center">
                    <img src="~/images/mini-logo.png" alt="Logo" class="img-fluid" />
                    <p>Create your account.</p>
                </div>
                <form asp-action="Register" method="post">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="u-p">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" class="form-control" placeholder="Enter your Username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="u-p">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="u-p d-none">
                                <label asp-for="Role" class="form-label">Role</label>
                                <input asp-for="Role" class="form-control" value="Client" readonly />
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                            <div class="u-p">
                                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your Phone Number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            
                        </div>
                        <div class="col-sm-6">
                            <div class="u-p">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter your Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="u-p">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your Password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="u-p d-none">
                                <label asp-for="CreatedBy" class="form-label">Created By</label>
                                <input asp-for="CreatedBy" class="form-control" value="Registration" readonly />
                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="buton">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                    <div class="text-center mt-3">
                        <p>Already have an account? <a href="@Url.Action("Login", "Account")">Sign in here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
