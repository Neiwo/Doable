@model Doable.Models.Tasklist

@{
    Layout = "~/Views/Shared/_LayoutNoNav.cshtml";
    ViewData["Title"] = Model.Title;
}

<html>
<head>
    <link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />
</head>
<body>

    <h2>@Model.Title</h2>
    <hr />

    <div class="row">
        <dl>
            <dd class="col-sm-10 description-box">
                @Model.Description
            </dd>
        </dl>
        @if (Model.Docus.Any())
        {
            <div class="row" style="font-size: small">
                <h5>Attached Files:</h5>

                    @foreach (var docu in Model.Docus)
                    {
                        <ul>
                            <a href="@Url.Action("DownloadFile", "TaskList", new { id = docu.ID })">@docu.FileName</a>
                         </ul>
                    }
            </div>
        }
    </div>

    @if (Model.Notes.Any())
    {
        <hr />
        <div class="row" style="font-size: small">
            <h5>Remarks:</h5>
            <ul>
                @foreach (var note in Model.Notes)
                {
                    <li>@note.Remarks (@note.CreatedDate.ToShortDateString())</li>
                }
            </ul>
        </div>
    }

    

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <form asp-action="CompleteTask" method="post" class="mb-0">
            <a asp-action="AddFiles" asp-route-tasklistId="@Model.ID" class="btn btn-info" style="margin-left: 10px; color: white;">+ Files</a>
            <input type="hidden" name="id" value="@Model.ID" />
            <button type="submit" class="btn btn-success">Complete Task</button>
        </form>
    </div>


</body>
</html>

<style>
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden; /* Prevent horizontal scrolling */
    }
</style>
