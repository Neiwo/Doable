@model Doable.Models.Tasklist

@{
    Layout = "~/Views/Shared/_LayoutNoNav.cshtml";
    ViewData["Title"] = Model.Title;
}
<html>
<head>
    <link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />
</head>
<body>

    <h2>@Model.Title</h2>
    <hr />

    <div class="row">
        <dl>
            <dd class="col-sm-10 description-box">
                @Model.Description
            </dd>
        </dl>
    </div>

    <div class="row">
        <h4>Notes</h4>
        <ul>
            @foreach (var note in Model.Notes)
            {
                <li>@note.Remarks (@note.CreatedDate.ToShortDateString())</li>
            }
        </ul>
    </div>

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <div class="button-container">
        <form asp-action="Return" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model.ID" />
            <input type="submit" value="Return Work" class="btn btn-danger" />
        </form>
        <form asp-action="Complete" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model.ID" />
            <input type="submit" value="Complete Task" class="btn btn-success" />
        </form>
        <a asp-action="AddNotes" asp-route-id="@Model.ID" class="btn btn-info" style="margin-left: 10px;">Add Notes</a>
    </div>

</body>
</html>

<style>
    .button-container {
        display: flex;
        align-items: center;
        float: right;
    }

        .button-container form {
            margin-left: 10px;
        }
</style>
