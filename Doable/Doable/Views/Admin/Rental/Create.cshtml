@model Doable.Models.Booking

@{
    Layout = "~/Views/Shared/_LayoutNoNav.cshtml";
    ViewData["Title"] = "Create Booking";
    var clients = ViewData["Clients"] as List<Doable.Models.User>;
}

<h3>Create Booking</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label"></label>
                <select asp-for="CustomerEmail" class="form-control" asp-items="@(new SelectList(clients, "Email", "Email"))">
                    <option value="">-- Select a Client --</option>
                </select>
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceType" class="control-label"></label>
                <input asp-for="ServiceType" class="form-control" />
                <span asp-validation-for="ServiceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceDateFrom" class="control-label"></label>
                <input asp-for="ServiceDateFrom" class="form-control" type="date" />
                <span asp-validation-for="ServiceDateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceDateTo" class="control-label"></label>
                <input asp-for="ServiceDateTo" class="form-control" type="date" />
                <span asp-validation-for="ServiceDateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment" class="control-label"></label>
                <input asp-for="Payment" class="form-control" />
                <span asp-validation-for="Payment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
